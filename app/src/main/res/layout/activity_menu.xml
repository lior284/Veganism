<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_page"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/menuLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_menu"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/menuButtonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/homePage_home_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_recipe"
                    android:fontFamily="@font/quicksand_semibold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Recipes"
                    android:textColor="@color/primaryUI" />

                <TextView
                    android:id="@+id/homePage_addRecipe_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_add"
                    android:fontFamily="@font/quicksand_semibold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Add recipe"
                    android:textColor="@color/primaryUI" />

                <TextView
                    android:id="@+id/homePage_AIChat_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_chat"
                    android:fontFamily="@font/quicksand_semibold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="AI chat"
                    android:textColor="@color/primaryUI" />

                <TextView
                    android:id="@+id/homePage_profile_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_profile"
                    android:fontFamily="@font/quicksand_semibold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Profile"
                    android:textColor="@color/primaryUI" />

                <TextView
                    android:id="@+id/homePage_registerSignIn_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_register"
                    android:drawableTint="@color/primaryUI"
                    android:fontFamily="@font/quicksand_semibold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Register / Sign in"
                    android:textColor="@color/primaryUI"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:id="@+id/homePage_indicator_v"
                android:layout_width="103dp"
                android:layout_height="4dp"
                android:layout_gravity="bottom"
                android:background="@color/indicator" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/homePage_loadingOverlay_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

</FrameLayout>